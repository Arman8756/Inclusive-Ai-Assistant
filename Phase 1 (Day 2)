// Function to find highest marks using different loops
function findHighestMarks(marks) {
    let highest;

    // --- Using for loop ---
    highest = marks[0];
    for (let i = 1; i < marks.length; i++) {
        if (marks[i] > highest) {   // conditional check
            highest = marks[i];
        }
    }
    console.log("Highest Marks (for loop):", highest);

    // --- Using while loop ---
    highest = marks[0];
    let i = 1;
    while (i < marks.length) {
        if (marks[i] > highest) {   // conditional check
            highest = marks[i];
        }
        i++;
    }
    console.log("Highest Marks (while loop):", highest);

    // --- Using forEach loop ---
    highest = marks[0];
    marks.forEach(mark => {
        if (mark > highest) {       // conditional check
            highest = mark;
        }
    });
    console.log("Highest Marks (forEach loop):", highest);
}

// Example array
let marks = [45, 78, 12, 89, 67];

// Call the function
findHighestMarks(marks);
